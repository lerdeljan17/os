#include "utils.h"
#define MAX 128

#define print(x) write(1, x, strlen(x));
static char mala_slova[MAX];
static char velika_slova[MAX];
static char ctrl_map[16][66];
static int CTRL = 0;
static int ALT = 0;
static int SHIFT = 0;
static int len1,len2;
static char *buff;
static char s[10];

